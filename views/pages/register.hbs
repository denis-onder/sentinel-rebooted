<link rel="stylesheet" href="/css/register.css">
<div id="registration">
  <div id="registration_info">
    <h1 class="registration_info_header">Sentinel</h1>
    <p class="registration_info_text">You are a few moments away <br></br> from using your new, favorite open-souce
      password
      manager!</p>
  </div>
  <div id="registration_form">

    <div class="registration_form_wrapper">

      <div class="registration_form_input div1">
        <label>First name:</label>
        <input id="first_name_input" type="text">
      </div>
      <div class="registration_form_input div2">
        <label>Last name:</label>
        <input id="last_name_input" type="text">
      </div>

      <div class="registration_form_input div3">
        <label>Email address:</label>
        <input id="email_input" type="text">
      </div>

      <div class="registration_form_input div4">
        <label>Password:</label>
        <input id="password_input" type="password">
      </div>
      <div class="registration_form_input div5">
        <label>Confirm password:</label>
        <input id="confirm_password_input" type="password">
      </div>

      <button class="registration_form_submit div6" id="submit_button">Register</button>

    </div>

  </div>
</div>

<div id="error_handler_wrapper"></div>
<script src="/js/register.js"></script>